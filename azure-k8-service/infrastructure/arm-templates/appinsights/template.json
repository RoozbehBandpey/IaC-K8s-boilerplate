{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "regionId": {
            "type": "string"
        },
        "keyvaultName": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "apiVersion": {
            "type": "string"
        },
        "workspaceResourceName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "location": "[parameters('regionId')]",
            "name": "[parameters('name')]",
            "apiVersion": "[parameters('apiVersion')]",
            "kind": "[parameters('type')]",
            "properties": {
                "Application_Type": "[parameters('type')]"
            }
        },
        {
          "name": "[concat(parameters('keyVaultName'), '/instrumentationkey', parameters('name'))]",
          "type": "Microsoft.KeyVault/vaults/secrets",
          "apiVersion": "[parameters('apiVersion')]",
          "location": "[parameters('regionId')]",
          "dependsOn": [
            "[parameters('name')]"
          ],
          "properties": {
            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('name')), parameters('apiVersion')). InstrumentationKey]"
          }
        }
    ],
    "outputs": {
        "resourceId": {
          "value": "[resourceId('microsoft.insights/components', parameters('name'))]",
          "type": "string"
        }
    }
}